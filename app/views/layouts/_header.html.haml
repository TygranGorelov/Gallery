%header.navbar.navbar-fixed-top.navbar-inverse
  %div.container
    = link_to 'Gallery', root_path, id: 'logo'
    %nav
      %ul.nav.navbar-nav.navbar-right
        - if current_user
          %li= link_to 'My page', user_path(current_user)
          %li= link_to 'All Categories', categories_path
          %li= link_to 'All Images', pictures_path
          %li= link_to 'All Comments', comments_path
          %li= link_to 'All users', users_path
          %li= link_to 'Profile', edit_user_registration_path
          %li= link_to 'Log out', destroy_user_session_path, method: :delete
        - else
          %li= link_to 'Log In', new_user_session_path