- provide(:title_page, 'Home')

- if current_user
  %div.row

    %aside.col-md-4
      %h3 #{current_user.name}

    %div.col-md-8
      %h3 Galleries'll be here!

- else
  %div.center.jumbotron.text-center
  %h1 Welcome To Gallery
  = link_to 'Sign up now!', new_user_registration_path, class: 'btn btn-lg btn-primary'

